<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".ui.evenement.admin.ManageEvenementAdminActivity">

        <TextView
            android:id="@+id/topTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ajouter un Evenement"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <!-- Evenement Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/evenementNameTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Evenement Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date of Start -->
        <LinearLayout
            android:id="@+id/debutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDebut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Debut"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPickDebutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir date" />
        </LinearLayout>

        <!-- Date of End -->
        <LinearLayout
            android:id="@+id/finLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fin"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPickFinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir date" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Image"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <!-- Image selection -->
        <ImageView
            android:id="@+id/imageViewEvenement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:contentDescription="Evenement Image"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Add Evenement Button -->
        <Button
            android:layout_marginBottom="50dp"
            android:id="@+id/buttonManageEvenement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Ajouter" />
    </LinearLayout>
</ScrollView>
